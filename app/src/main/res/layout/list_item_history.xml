<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/area_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_squared_corner_shadow">


    <TextView
        android:id="@+id/tv_charge_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="충전"
        android:textColor="@color/ks_gray"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_charge_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_earning_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="+ 10,000원"
        android:textColor="@color/bright_red"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_charge_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_charge_type" />

    <TextView
        android:id="@+id/tv_charge_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="07.09"
        android:textColor="@color/ks_gray"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_alarm_dot"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_alarm_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/circle_cyan_dark"
        app:layout_constraintBottom_toBottomOf="@+id/tv_charge_date"
        app:layout_constraintEnd_toStartOf="@+id/tv_charge_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_charge_date" />

</androidx.constraintlayout.widget.ConstraintLayout>