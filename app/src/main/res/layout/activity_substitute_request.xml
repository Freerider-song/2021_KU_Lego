<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lego_main_color"
    tools:context=".activity.ActivitySubstituteRequest">

    <EditText
        android:id="@+id/et_notice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:ems="15"
        android:gravity="top"
        android:hint="기사님께 전달할 내용을 적어주세요 :)"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textColor="@color/ks_gray"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_reserve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_charging"
        app:layout_constraintTop_toBottomOf="@+id/tv_charging" />

    <EditText
        android:id="@+id/et_location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:ems="15"
        android:gravity="top"
        android:hint="서울특별시 성북구 안암로 145"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textColor="@color/ks_gray"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_pickup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_pickup_before"
        app:layout_constraintTop_toTopOf="@+id/tv_pickup_before" />

    <EditText
        android:id="@+id/et_reserve_time"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:ems="15"
        android:hint="2021-12-13 11:00"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textColor="@color/ks_gray"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_pickup"
        app:layout_constraintTop_toTopOf="@+id/tv_pickup_before" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_round_corner_gray_filled"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6dp"
        android:text="     홍길동"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_name5"
        app:layout_constraintTop_toTopOf="@+id/tv_name5"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_round_corner_gray_filled"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6dp"
        android:text="     010-1234-5678"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_name5"
        app:layout_constraintTop_toTopOf="@+id/tv_name6"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_car_number"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_round_corner_gray_filled"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6dp"
        android:text="     10가 1234"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_name5"
        app:layout_constraintTop_toTopOf="@+id/tv_name7"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_back_colored"
        android:backgroundTint="#00BCD4"
        android:backgroundTintMode="src_in"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reserve"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_round_corner_cyan_light_filled"
        android:backgroundTint="#FFFFFF"
        android:onClick="onClick"
        android:text="충전 예약하기"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="6dp"
        android:text="대리 충전 서비스 예약"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_menu" />

    <TextView
        android:id="@+id/tv_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="6dp"
        android:text="회원 정보"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_name2"
        app:layout_constraintTop_toBottomOf="@+id/tv_name2" />

    <TextView
        android:id="@+id/tv_name8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="6dp"
        android:text="예약 정보"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_name3"
        app:layout_constraintTop_toBottomOf="@+id/tv_name7" />

    <TextView
        android:id="@+id/tv_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="6dp"
        android:text="회원 정보 수정은 내 정보에서 가능합니다."
        android:textColor="@color/ks_gray"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_name3"
        app:layout_constraintTop_toBottomOf="@+id/tv_name3" />

    <TextView
        android:id="@+id/tv_name5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="6dp"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_name3"
        app:layout_constraintTop_toBottomOf="@+id/tv_name4" />

    <TextView
        android:id="@+id/tv_pickup_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="6dp"
        android:text="위치"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_name7"
        app:layout_constraintTop_toBottomOf="@+id/tv_name8" />

    <TextView
        android:id="@+id/tv_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:lineSpacingExtra="6dp"
        android:text="예약 일시"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_name7"
        app:layout_constraintTop_toBottomOf="@+id/tv_pickup_before" />

    <TextView
        android:id="@+id/tv_charging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:lineSpacingExtra="6dp"
        android:text="기타 전달사항"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_name7"
        app:layout_constraintTop_toBottomOf="@+id/tv_pickup" />

    <TextView
        android:id="@+id/tv_name6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="6dp"
        android:text="연락처"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_name3"
        app:layout_constraintTop_toBottomOf="@+id/tv_name5" />

    <TextView
        android:id="@+id/tv_name7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="6dp"
        android:text="예약 차량"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/tv_name6"
        app:layout_constraintTop_toBottomOf="@+id/tv_name6" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/btn_menu"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />
</androidx.constraintlayout.widget.ConstraintLayout>